{
  "name": "squadui",
  "displayName": "SquadUI",
  "description": "Visualize Squad team members and their tasks",
  "version": "0.4.0",
  "publisher": "csharpfritz",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/csharpfritz/SquadUI"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:squadMembers"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "squadui",
          "title": "SquadUI",
          "icon": "$(organization)"
        }
      ]
    },
    "views": {
      "squadui": [
        {
          "id": "squadMembers",
          "name": "Team Members"
        }
      ]
    },
    "commands": [
      {
        "command": "squadui.showWorkDetails",
        "title": "Show Work Details",
        "category": "Squad"
      },
      {
        "command": "squadui.refreshTree",
        "title": "Refresh Team View",
        "category": "Squad",
        "icon": "$(refresh)"
      },
      {
        "command": "squadui.openIssue",
        "title": "View Issue Details",
        "category": "Squad",
        "icon": "$(link-external)"
      },
      {
        "command": "squadui.initSquad",
        "title": "Initialize",
        "category": "Squad"
      },
      {
        "command": "squadui.addMember",
        "title": "Add Team Member",
        "category": "Squad",
        "icon": "$(add)"
      },
      {
        "command": "squadui.viewCharter",
        "title": "View Charter",
        "category": "Squad",
        "icon": "$(open-preview)"
      },
      {
        "command": "squadui.removeMember",
        "title": "Remove Team Member",
        "category": "Squad",
        "icon": "$(trash)"
      },
      {
        "command": "squadui.addSkill",
        "title": "Add Skill",
        "category": "Squad",
        "icon": "$(book)"
      },
      {
        "command": "squadui.viewSkill",
        "title": "View Skill",
        "category": "Squad",
        "icon": "$(open-preview)"
      },
      {
        "command": "squadui.removeSkill",
        "title": "Remove Skill",
        "category": "Squad",
        "icon": "$(trash)"
      },
      {
        "command": "squadui.openDashboard",
        "title": "Open Dashboard",
        "category": "Squad",
        "icon": "$(graph)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "squadui.addMember",
          "when": "view == squadMembers",
          "group": "navigation"
        },
        {
          "command": "squadui.addSkill",
          "when": "view == squadMembers",
          "group": "navigation"
        },
        {
          "command": "squadui.refreshTree",
          "when": "view == squadMembers",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "squadui.viewCharter",
          "when": "view == squadMembers && viewItem == member",
          "group": "inline"
        },
        {
          "command": "squadui.removeMember",
          "when": "view == squadMembers && viewItem == member",
          "group": "inline"
        },
        {
          "command": "squadui.showWorkDetails",
          "when": "view == squadMembers && viewItem == task",
          "group": "inline"
        },
        {
          "command": "squadui.openIssue",
          "when": "view == squadMembers && viewItem == issue",
          "group": "inline"
        },
        {
          "command": "squadui.viewSkill",
          "when": "view == squadMembers && viewItem == skill",
          "group": "inline"
        },
        {
          "command": "squadui.removeSkill",
          "when": "view == squadMembers && viewItem == skill",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "squadui.showWorkDetails",
          "when": "false"
        },
        {
          "command": "squadui.openIssue",
          "when": "false"
        },
        {
          "command": "squadui.viewSkill",
          "when": "false"
        },
        {
          "command": "squadui.removeSkill",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "squadui.addMember",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      },
      {
        "command": "squadui.openDashboard",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.54.0",
    "glob": "^13.0.3",
    "mocha": "^11.7.5",
    "typescript": "^5.3.2"
  }
}
