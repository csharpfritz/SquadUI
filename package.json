{
  "name": "squadui",
  "displayName": "SquadUI",
  "description": "Visualize Squad team members and their tasks",
  "version": "0.1.0",
  "publisher": "csharpfritz",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/csharpfritz/SquadUI"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:squadMembers"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "squadui",
          "title": "SquadUI",
          "icon": "$(organization)"
        }
      ]
    },
    "views": {
      "squadui": [
        {
          "id": "squadMembers",
          "name": "Team Members"
        }
      ]
    },
    "commands": [
      {
        "command": "squadui.showWorkDetails",
        "title": "Show Work Details",
        "category": "SquadUI"
      },
      {
        "command": "squadui.refreshTree",
        "title": "Refresh Team View",
        "category": "SquadUI",
        "icon": "$(refresh)"
      },
      {
        "command": "squadui.openIssue",
        "title": "View Issue Details",
        "category": "SquadUI",
        "icon": "$(link-external)"
      },
      {
        "command": "squadui.initSquad",
        "title": "Initialize",
        "category": "Squad"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "squadui.refreshTree",
          "when": "view == squadMembers",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.54.0",
    "glob": "^13.0.3",
    "mocha": "^11.7.5",
    "typescript": "^5.3.2"
  }
}
